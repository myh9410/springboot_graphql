type Item {
    no: ID
    name: String
    type: String
    price: Int
    order_items: [OrderItem]
}

input ItemInput {
    name: String
    type: String
    price: Int
}

extend type Query {
    getItemByNo(no: ID): Item
    getAllItems: [Item]
    getItemsByType(type: String): [Item]
}

extend type Mutation {
    saveItem(input: ItemInput): ID
    putItem(input: ItemInput): ID
    deleteItem(input: ItemInput): Boolean
}